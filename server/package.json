{
  "name": "workers-app",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "npm run db:deploy && wrangler deploy",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:deploy": "wrangler d1 migrations apply wapar-db --remote",
    "db:deploy:local": "wrangler d1 migrations apply wapar-db",
    "db:list": "wrangler d1 migrations list wapar-db",
    "test": "vitest",
    "test:unit": "vitest tests --exclude tests/e2e",
    "test:e2e": "vitest tests/e2e",
    "test:integration": "vitest run tests/integration/ --config tests/integration/vitest.config.ts",
    "test:all": "vitest"
  },
  "dependencies": {
    "drizzle-orm": "^0.44.5",
    "hono": "^4.10.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250910.0",
    "@faker-js/faker": "^9.9.0",
    "drizzle-kit": "^0.31.4",
    "typescript": "^5.9.2",
    "vitest": "^2.1.9",
    "wrangler": "^4.35.0"
  }
}
