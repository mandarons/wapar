{
  "name": "wapar",
  "version": "0.0.0",
  "description": "Track your desktop applications' usage and accept crash reports",
  "main": "index.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mandarons/wapar.git"
  },
  "author": "Mandar Patil (mandarons@pm.me)",
  "license": "SEE LICENSE IN LICENSE",
  "bugs": {
    "url": "https://github.com/mandarons/wapar/issues"
  },
  "homepage": "https://github.com/mandarons/wapar#readme",
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/body-parser": "^1.19.2",
    "@types/chai": "^4.3.4",
    "@types/express": "^4.17.15",
    "@types/js-yaml": "^4.0.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.18",
    "@types/node-cron": "^3.0.7",
    "@types/sinon": "^10.0.13",
    "@types/supertest": "^2.0.12",
    "chai": "^4.3.7",
    "chai-http": "^4.3.0",
    "mocha": "^10.2.0",
    "mocha-allure-reporter": "^1.4.0",
    "nodemon": "^2.0.20",
    "nyc": "^15.1.0",
    "sinon": "^15.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "scripts": {
    "datagen": "ts-node server/src/controllers/generate-data.ts && mv data.json client/public/",
    "build": "NODE_ENV=production rm -rf ./build && tsc --build ./tsconfig.json && cp -r ./server/config ./build/config",
    "build:server": "tsc --build ./tsconfig.json",
    "build:docker:local": "PUBLIC_URL=. npm run build && docker build --tag wapar .",
    "start": "nodemon -e ts,yaml ./server/src/index.ts",
    "prod:local": "NODE_ENV=production nodemon -w ./build -e yaml ./build/src/index.js",
    "prod": "NODE_ENV=production node ./src/index.js",
    "test:server": "NODE_ENV=test mocha --exit -r ts-node/register --r source-map-support/register --recursive ./server/tests/**/*.test.ts",
    "test:server:ci": "NODE_ENV=test nyc --reporter=html --reporter=json-summary  mocha --reporter mocha-allure-reporter --exit -r ts-node/register ./server/tests/**/*.ts"
  },
  "dependencies": {
    "axios": "^1.2.5",
    "body-parser": "^1.20.1",
    "express": "^4.18.2",
    "js-yaml": "^4.1.0",
    "node-cron": "^3.0.2",
    "pg": "^8.8.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.28.0"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "reporter": [
      "html"
    ],
    "all": true,
    "include": [
      "server/src/**/*.ts"
    ],
    "exclude": [
      "server/tests/**/*.test.ts"
    ]
  }
}