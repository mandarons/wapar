generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model heartbeat {
  id             String   @id @default(cuid())
  installationId String
  data           Json?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model installation {
  id          String   @id @default(cuid())
  appName     String
  appVersion  String
  ipAddress   String   @db.Inet
  previousId  String?
  countryCode String?
  region      String?
  city        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
