---
import Layout from "../layouts/Layout.astro";
const response = await fetch(`https://wapar-api.mandarons.com/api/data`);
const data = (await response.json()).data;
const appName = "ha-bouncie";
---

<Layout
    title="Wapar :: Home Assistant - Bouncie"
    currentPage={appName}
    data={data}
>
    <h1 class="text-center">{`Total: ${data.haBouncie.total}`}</h1>
</Layout>
